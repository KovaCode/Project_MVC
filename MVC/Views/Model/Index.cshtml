
@model MVC.Models.VehicleModelViewPaged
@using PagedList.Mvc;


<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <p>
        Filter: @Html.TextBox("SearchValue")
        <input type="submit" value="SearchValue" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Abrv", "Index", new { sortOrder = ViewBag.AbrvSortParam })
        </th>


    </tr>

    @foreach (var item in Model.ModelPaged)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abrv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleMakeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleMakeName)
            </td>

            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
        </tr>
    }

</table>

Page @(Model.ModelPaged.PageCount < Model.ModelPaged.PageNumber ? 0 : Model.ModelPaged.PageNumber) of @Model.ModelPaged.PageCount
@Html.PagedListPager(Model.ModelPaged, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
