
@model MVC.Models.VehicleModelMakerView
@using PagedList.Mvc;


<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
s
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <p>
        Filter: @Html.TextBox("SearchValue")
        <input type="submit" value="SearchValue" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Abrv", "Index", new { sortOrder = ViewBag.AbrvSortParam })
        </th>


    </tr>

    @foreach (var item in Model.Models)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
        </tr>
    }

</table>

@*Page @(Model.Models.Count < Model.Models ? 0 : Model.PageNumber) of @Model.PageCount*@

@Html.PagedListPager(Model.Models, page => Url.Action("", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
